# FastAPI Backend Environment Variables

# アプリケーション設定
APP_NAME="Restaurant Board ETL API"
APP_VERSION="1.0.0"
DEBUG=false

# Google Cloud設定
PROJECT_ID=your-project-id
REGION=asia-northeast1
BQ_DATASET=rb
GCS_BUCKET=your-gcs-bucket

# Google Sheets設定
STORES_SHEET_ID=your-sheet-id

# 処理設定
DAYS_BACK=7
FROM_DATE=
TO_DATE=

# レストランボード設定
RB_BASE_URL=https://manage.restaurant-board.jp
RB_LOGIN_URL=https://manage.restaurant-board.jp/login

# Node.js Scraper設定
SCRAPER_SERVICE_URL=http://localhost:3001
SCRAPER_TIMEOUT=300

# ログ設定
LOG_LEVEL=INFO
LOG_FORMAT=json

# 処理設定
MAX_RETRIES=3
RETRY_DELAY=1000
TIMEOUT=30000

# BigQuery設定
BQ_TABLE_PREFIX=reservations_rb
STAGE_TABLE_NAME=stage_reservations_rb
MAIN_TABLE_NAME=reservations_rb

# GCS設定
GCS_PATH_PREFIX=landing/restaurant_board
MANUAL_PATH_PREFIX=manual/restaurant_board

# API設定
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# セキュリティ設定
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# データベース設定（将来の拡張用）
DATABASE_URL=

# Redis設定（Celery用）
REDIS_URL=redis://localhost:6379
